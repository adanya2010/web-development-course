num = int(input("Enter a number: "))

# Convert number to string to count digits
order = len(str(num))
sum_of_powers = 0

# Copy of the number
temp = num

while temp > 0:
    digit = temp % 10
    sum_of_powers += digit ** order
    temp //= 10

# Check condition
if num == sum_of_powers:
    print(num, "is an Armstrong number")
else:
    print(num, "is NOT an Armstrong number")
