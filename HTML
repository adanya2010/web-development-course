<!DOCTYPE html>
<html>
<head>
    <title>Try-Catch Error Handling</title>
</head>
<body>
    <h2>Try-Catch Error Example</h2>

    <button onclick="checkNumber()">Check Number</button>

    <script>
        function checkNumber() {
            try {
                // Ask user for a number
                let num = prompt("Enter a number:");

                // If input is not a number, throw an error
                if (isNaN(num) || num === null || num.trim() === "") {
                    throw "Invalid input! Please enter a valid number.";
                }

                // If number is valid, show message
                alert("You entered: " + num);

            } catch (error) {
                // Catch the error and display it
                alert("Error: " + error);
            } finally {
                console.log("Execution finished!");
            }
        }
    </script>
</body>
</html>
